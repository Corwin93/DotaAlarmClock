<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/darkBlue</item>
        <item name="android:timePickerStyle">@style/AppTheme.TimePicker</item>
    </style>
    <style name="AppTheme.TimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/darkBlue</item>
        <item name="android:numbersTextColor">@color/lightGrey</item>
        <item name="android:numbersSelectorColor">@color/lightBlue</item>
        <item name="android:numbersBackgroundColor">@color/darkBlue</item>
    </style>
</resources>